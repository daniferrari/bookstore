<h1>Authors</h1>

<div class="form-horizontal">
  <div class="form-group">
    <label class="col-sm-2 control-label">Title</label>
    <div class="col-sm-10">
      {{input type="text" value=model.name class="form-control" placeholder="Please enter the name of the author"}}
    </div>
    <!-- <div class="col-sm-10">
      {{input type="text" value=model.books class="form-control" placeholder="Please enter the name of the author"}}
    </div> -->
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <button type="submit" class="btn btn-default" {{action 'saveAuthor' model}}>Add to Authors list</button>
    </div>
  </div>
</div>
