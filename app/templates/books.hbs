<h1>Book list</h1>

{{#link-to 'books.new' class="btn btn-primary"}}Add new book{{/link-to}}

<table class="table table-bordered table-striped">
  <thead>
    <tr>
      <th>Title</th>
      <th>Author</th>

    </tr>
  </thead>
  <tbody>
  {{#each model as |book|}}
    <tr>
      <th>{{#link-to 'books.view' book.id }}{{book.title}}{{/link-to}}</th>
      <td>{{book.author}}</td>
    </tr>
  {{/each}}
  </tbody>
</table>

{{outlet}}
