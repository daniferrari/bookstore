<h1>Books</h1>

<div class="form-horizontal">
  <div class="form-group">
    <label class="col-sm-2 control-label">Title</label>
    <div class="col-sm-10">
      {{input type="text" value=model.title class="form-control" placeholder="Please enter the title of the book"}}
    </div>
  </div>
  <div class="form-group">
    <label class="col-sm-2 control-label">Price</label>
    <div class="col-sm-10">
      {{input type="text" value=model.price class="form-control" placeholder="Please enter the price of the book"}}
    </div>
  </div>
  <div class="form-group">
    <label class="col-sm-2 control-label">Author</label>
    <div class="col-sm-10">
      {{input type="text" value=model.author class="form-control" placeholder="Please enter the Author of the book"}}
    </div>
  </div>
  <div class="form-group">
    <label class="col-sm-2 control-label">Publisher</label>
    <div class="col-sm-10">
      {{input type="text" value=model.publisher class="form-control" placeholder="The Publisher of the Library"}}
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <button type="submit" class="btn btn-default" {{action 'saveBook' model}}>Add to library list</button>
    </div>
  </div>
</div>
